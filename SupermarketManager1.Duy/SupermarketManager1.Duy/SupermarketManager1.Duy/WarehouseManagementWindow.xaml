<Window x:Class="SupermarketManager1.Duy.WarehouseManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Warehouse Management" Height="600" Width="900" Loaded="Window_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Label Content="📦 QUẢN LÝ KHO HÀNG" Grid.Row="0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Chọn kho -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Chọn kho:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="WarehouseComboBox" Grid.Column="1" FontSize="16" 
                      SelectionChanged="WarehouseComboBox_SelectionChanged"
                      DisplayMemberPath="WarehouseName"
                      SelectedValuePath="WarehouseId"/>
        </Grid>

        <!-- DataGrid hiển thị inventory -->
        <DataGrid x:Name="InventoryDataGrid" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã SP" Binding="{Binding ProductCode}" Width="100"/>
                <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding Product.NameP}" Width="*"/>
                <DataGridTextColumn Header="Giá" Binding="{Binding Product.Price, StringFormat={}{0:N0}}" Width="100"/>
                <DataGridTextColumn Header="Tồn kho" Binding="{Binding Quantity}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Buttons -->
                <DataGridTemplateColumn Header="Hành động" Width="300">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="➖" Width="40" Height="30" Margin="2" 
                                        Click="DecreaseButton_Click" Tag="{Binding ProductCode}"
                                        Background="#F44336" Foreground="White" FontWeight="Bold"/>

                                <Button Content="➕" Width="40" Height="30" Margin="2" 
                                        Click="IncreaseButton_Click" Tag="{Binding ProductCode}"
                                        Background="#4CAF50" Foreground="White" FontWeight="Bold"/>

                                <Button Content="📝 Điều chỉnh" Width="150" Height="30" Margin="2" 
                                        Click="AdjustButton_Click" Tag="{Binding ProductCode}"
                                        Background="#2196F3" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>