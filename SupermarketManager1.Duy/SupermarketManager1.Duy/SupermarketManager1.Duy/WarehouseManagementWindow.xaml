<Window x:Class="SupermarketManager1.Duy.WarehouseManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        
        mc:Ignorable="d"
        Title="Warehouse Management" Height="604" Width="900" Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">

    <materialDesign:Card Padding="20" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                
                <TextBlock Text="WAREHOUSE MANAGEMENT" 
                           FontSize="24" FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            </StackPanel>

            <ComboBox x:Name="WarehouseComboBox" Grid.Row="1" Margin="0,0,0,20"
                      materialDesign:HintAssist.Hint="Select warehouse to manage"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      FontSize="16" 
                      SelectionChanged="WarehouseComboBox_SelectionChanged"
                      DisplayMemberPath="WarehouseName"
                      SelectedValuePath="WarehouseId"/>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="InventoryDataGrid" Grid.Row="0" 
                          Style="{StaticResource MaterialDesignDataGrid}"
                          HeadersVisibility="Column"
                          IsReadOnly="True" CanUserAddRows="False"
                          GridLinesVisibility="None" RowHeaderWidth="0"
                          AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product Code" Binding="{Binding ProductCode}" Width="100"/>
                    <DataGridTextColumn Header="Product Name" Binding="{Binding Product.NameP}" Width="*"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Product.Price, StringFormat={}{0:N0}}" Width="100"/>
                    <DataGridTextColumn Header="Stock" Binding="{Binding Quantity}" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="Action" Width="300">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                            ToolTip="Decrease" Background="Red" BorderBrush="Red"
                                            Click="DecreaseButton_Click" Tag="{Binding ProductCode}"
                                            Margin="2">
                                        <materialDesign:PackIcon Kind="Minus" />
                                    </Button>

                                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                            ToolTip="Increase" Background="Green" BorderBrush="Green"
                                            Click="IncreaseButton_Click" Tag="{Binding ProductCode}"
                                            Margin="2">
                                        <materialDesign:PackIcon Kind="Plus" />
                                    </Button>

                                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                            Content="Adjust"
                                            Width="150" Height="30" Margin="10,2,2,2" 
                                            Click="AdjustButton_Click" Tag="{Binding ProductCode}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="Close" Width="100" Height="40" 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </materialDesign:Card>
</Window>