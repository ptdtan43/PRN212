<Window x:Class="SupermarketManager1.Duy.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupermarketManager1.Duy"
        mc:Ignorable="d"
        Title="DetailWindow" Height="500" Width="800" Loaded="Window_Loaded">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- BỎ row cho Quantity -->
        </Grid.RowDefinitions>

        <Label x:Name="DetailWindowModeLabel" Content="Product Details" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"  HorizontalAlignment="Center"/>

        <Label Content="Id" Grid.Row="1" Grid.Column="0" Margin="5,5,10,5"/>
        <TextBox x:Name="ProductIdTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>
        <Button x:Name="DetailWindowButton" Content="Save" Grid.Row="1" Grid.Column="2" Width="120" Margin="10,5,5,5" Click="DetailWindowButton_Click" />

        <Label Content="Name" Grid.Row="2" Grid.Column="0" Margin="5,5,10,5"/>
        <TextBox x:Name="ProductNameTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>
        <Button x:Name="QuitButton" Content="Quit" Grid.Row="2" Grid.Column="2" Width="120" Margin="10,5,5,5" Click="QuitButton_Click"/>

        <Label Content="Price" Grid.Row="3" Grid.Column="0" Margin="5,5,10,5"/>
        <TextBox x:Name="ProductPriceTextBox" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <Label Content="Warranty" Grid.Row="4" Grid.Column="0" Margin="5,5,10,5"/>
        <TextBox x:Name="ProductWarrantyTextBox" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <Label Content="Description" Grid.Row="5" Grid.Column="0" Margin="5,5,10,5" VerticalAlignment="Top"/>
        <TextBox x:Name="ProductDescriptionTextBox" Grid.Row="5" Grid.Column="1" Margin="5" Height="68" TextWrapping="Wrap" AcceptsReturn="True"/>

        <!-- BỎ Quantity TextBox -->

        <Label Content="Publication Day" Grid.Row="6" Grid.Column="0" Margin="5,5,10,5"/>
        <TextBox x:Name="ProductPublicationDayTextBox" Grid.Row="6" Grid.Column="1" Margin="5" ToolTip="Format: YYYY-MM-DD"/>

        <Label Content="Supplier Name" Grid.Row="7" Grid.Column="0" Margin="5,5,10,5"/>
        <TextBox x:Name="ProductSupplierNameTextBox" Grid.Row="7" Grid.Column="1" Margin="5"/>

        <Label Content="Category" Grid.Row="8" Grid.Column="0" Margin="5,5,10,5"/>
        <ComboBox x:Name="CategoryComboBox" Grid.Row="8" Grid.Column="1" Margin="5"/>

    </Grid>
</Window>