<Window x:Class="SupermarketManager1.Duy.WarehouseDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        
        mc:Ignorable="d"
        Title="Warehouse/Store Details" 
        Height="490" Width="600" 
        SizeToContent="Height"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">

    <materialDesign:Card Padding="25" Margin="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
               
                <TextBlock x:Name="TitleLabel" Text="Create New Warehouse/Store" 
                           FontSize="22" FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <TextBox x:Name="WarehouseNameTextBox" 
                         materialDesign:HintAssist.Hint="Warehouse/Store Name *"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <ComboBox x:Name="TypeComboBox" 
                          materialDesign:HintAssist.Hint="Type *"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          SelectionChanged="TypeComboBox_SelectionChanged"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="Central Warehouse" Tag="Central"/>
                    <ComboBoxItem Content="Store" Tag="Store" IsSelected="True"/>
                </ComboBox>

                <TextBox x:Name="AddressTextBox" 
                         materialDesign:HintAssist.Hint="Address"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15" TextWrapping="Wrap" Height="80"
                         VerticalScrollBarVisibility="Auto"/>

                <ComboBox x:Name="ManagerComboBox" 
                          materialDesign:HintAssist.Hint="Manager"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          DisplayMemberPath="FullName" SelectedValuePath="AccountId"
                          Visibility="Collapsed" 
                          Margin="0,0,0,15"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" Width="100" Height="40" Margin="0,0,10,0" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="CancelButton_Click"/>
                <Button Content="Save" Width="100" Height="40" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>